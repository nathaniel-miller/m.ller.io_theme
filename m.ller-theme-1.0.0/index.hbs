{{!< default}}

<header>

  {{#is "home"}}
  <section {{#if @blog.cover}}" style="background-image: url({{@blog.cover}});
                                       background-size: cover{{else}}no-cover{{/if}}">
    {{#if @blog.logo}}
      <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
    {{/if}}
    <h1>{{@blog.title}}</h1>

    <h2 class="page-description">{{@blog.description}}</h2>
  </section>
  {{/is}}

</header>

<main>
  <section>
    {{#foreach posts}}
      {{#has tag="welcome"}}
        {{> "post"}}
      {{/has}}
    {{/foreach}}
  </section>
  <hr>
  <section>
      {{#foreach posts limit="1"}}
        {{> "post"}}
      {{/foreach}}
  </section>

</main>
